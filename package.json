{
  "name": "@pure-ds/core",
  "shortname": "pds",
  "version": "0.1.0",
  "description": "Pure Design System - Why develop a Design System when you can generate one?",
  "type": "module",
  "main": "./public/assets/js/pds.js",
  "module": "./public/assets/js/pds.js",
  "types": "./src/js/pds.d.ts",
  "exports": {
    ".": {
      "types": "./src/js/pds.d.ts",
      "import": "./public/assets/js/pds.js"
    },
    "./pds-core": "./src/js/pds.js",
    "./pds-configurator": "./src/js/pds-configurator/pds-configurator.js",
    "./auto-define/*": "./public/auto-define/*"
  },
  "files": [
    "public/assets/js/",
    "public/auto-define/",
    "public/assets/img/icons.svg",
    "public/exports/",
    "src/js/pds.d.ts",
    "src/js/pds.js",
    "src/js/pds-core/",
    "src/js/pds-configurator/",
    "packages/pds-cli/bin/postinstall.js",
    "packages/pds-cli/bin/pds-static.js",
    "packages/pds-cli/bin/sync-assets.js",
    "README.md"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "node esbuild-dev.js",
    "build": "node esbuild-build.js",
    "update-styles": "node scripts/update-styles.mjs",
    "config-server": "node scripts/config-server.mjs",
    "export-config": "node scripts/export-config-json.mjs",
    "build-icons": "node scripts/build-icons.mjs",
    "sync-assets": "node packages/pds-cli/bin/sync-assets.js",
    "postinstall": "node packages/pds-cli/bin/postinstall.js",
    "pds:static": "node packages/pds-cli/bin/pds-static.js"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "esbuild": "^0.19.0",
    "fs-extra": "^11.1.1"
  },
  "dependencies": {
    "lit": "^3.3.1",
    "pure-web": "^1.1.22",
    "@qogni-technologies/pwa-utils-library": "^1.3.2",
    "showdown": "^2.1.0"
    
  }
}
